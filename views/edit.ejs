<!DOCTYPE html>
<html lang="en">
<head>
  <title>Simple crud</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<div class="container">
  <form method="post" action="/updateData">
    <input type="hidden" name="id" value="<%= editR.id %>"/>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" value="<%= editR.name %>" class="form-control"  placeholder="Enter name" name="name">
      </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="text" value="<%= editR.email %>" class="form-control"  placeholder="Enter email" name="email">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" value="<%= editR.password %>" class="form-control"  placeholder="Enter password" name="password">
    </div>
    <div class="form-group">
      <label for="gender">Gender:</label>
        <input  type="radio" <% if(editR.gender == "male") {  %> checked  <%  } %>  value="male" name="gender">Male
        <input  type="radio" <% if(editR.gender == "female") {  %> checked  <%  } %> value="female" name="gender">Female
    </div>
    <div class="form-group">
      <label for="hobby">Hobby:</label>
      <input  type="checkbox" <% if(editR.hobby.includes('cricket')) {  %> checked  <%  } %>  value="cricket" name="hobby">Cricket
      <input  type="checkbox" <% if(editR.hobby.includes('music')) {  %> checked  <%  } %> value="music" name="hobby">Music
      <input  type="checkbox" <% if(editR.hobby.includes('reading')) {  %> checked  <%  } %> value="reading" name="hobby">Reading
    </div>
    <div class="form-group">
      <label for="city">City:</label>
      <select name="city">
        <option value="">----select city-----</option>

        <%
            let city = ["surat","vadodara","ahemdabad","rajkot"]; 
            for(let i in city) {
        %>
        <option <% if(city[i] == editR.city) { %> selected <% } %> value="<%= city[i] %>"><%= city[i] %></option>
        <% } %>

    </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
  
</div>
<a href="/view">View Record</a>

</body>
</html>